<div class="admin">
  <h1>Listing issues</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Html</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @issues.each do |issue| %>
        <tr>
          <td><%= issue.name %></td>
          <td><%= issue.html %></td>
          <td><%= link_to 'Show', [:admin,issue] %></td>
          <td><%= link_to 'Edit', edit_admin_issue_path(issue) %></td>
          <td><%= link_to 'Destroy', [:admin, issue], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Issue', new_admin_issue_path %>
</div>